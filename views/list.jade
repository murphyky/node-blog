extends layout
block content
	div.container(ng-controller="BlogCtrl")
		div.row
			div.col-md-8
				h1.page-header Blog
					small.search
						input(type="text", placeholder="type a filter here", ng-model="filterText")
					hr
				section.articles
					article(ng-repeat="article in articles | filter:filterText")
						h2
							a(href="#") {{article.title}}
						p.lead by
							a(href="index.html") {{article.author || 'Kyle Murphy'}}
						p
							span.glyphicon.glyphicon-time Posted on {{article.date}}
						hr
						img.img-responsive(src="http://placehold.it/900x300" alt="")
						hr
						p {{article.text}}
						a.btn.btn-primary(href="#") Read More
							span.glyphicon.glyphicon-chevron-right
						hr
	script(src='/blog.js')