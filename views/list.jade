extends layout
block content
	div.container#blog-content(ng-controller="BlogCtrl")
		div.row
			div.col-md-12
				h1.page-header Blog Test
				small.search.pull-right
					input#searcher(type="text", placeholder="type a filter here", ng-model="filterText")
				hr
				section.articles
					article(ng-repeat="article in articles | filter:filterText")
						h2
							a(href="#", ng-cloak) {{article.title}}
						p.lead by
							a(href="index.html", ng-cloak) {{article.author || 'Kyle Murphy'}}
						p
							span.glyphicon.glyphicon-time(ng-cloak) Posted on {{article.date}}
						hr
						//img.img-responsive(src="http://placehold.it/900x300" alt="")
						hr
						p(ng-cloak) {{article.text}}
						//a.btn.btn-primary(href="#") Read More
						//	span.glyphicon.glyphicon-chevron-right
						//hr

						ul.pager
							li.previous
								a(href="#")&larr; Older
							li.next
								a(href="#") Newer &rarr;

	script(src='/blog.js')